<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#504848"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/bt_subA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get 25K chars"
        android:textColor="#000000"
        android:textSize="14sp"
        app:backgroundTint="#8BC34A" />

    <Button
        android:id="@+id/bt_subB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get 50K chars"
        android:textColor="#000000"
        android:textSize="14sp"
        app:backgroundTint="#CDDC39" />

    <Button
        android:id="@+id/bt_subC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get 100K chars"
        android:textColor="#000000"
        android:textSize="14sp"
        app:backgroundTint="#FFEB3B" />

    <Button
        android:id="@+id/bt_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Premium"
        android:textColor="#000000"
        android:textSize="14sp"
        app:backgroundTint="#FF9800" />

    <Button
        android:id="@+id/bt_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXIT"
        android:textColor="#000000"
        android:textSize="14sp"
        app:backgroundTint="#FF5722" />

</LinearLayout>